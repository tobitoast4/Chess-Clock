<resources xmlns:tools="http://schemas.android.com/tools">
    <!--    Base application theme for MainActivity-->
    <style name="Theme.ChessClockMain" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#DA0303</item>
        <item name="colorSecondaryVariant">#870101</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Makes the taskbar and buttonbar half transparent -->

    </style>

    <!--    Theme for all other activities except MainActivity-->
    <style name="Theme.ChessClock" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#DA0303</item>
        <item name="colorSecondaryVariant">#870101</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Makes the taskbar and buttonbar half transparent -->
        <item name="android:windowTranslucentNavigation">true</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:fitsSystemWindows">true</item>

    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>
</resources>